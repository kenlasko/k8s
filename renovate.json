{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "argocd",
    "helm-values",
    "kubernetes"
  ],
  "argocd": {
    "fileMatch": [
      "argocd-apps/[^/]+\\.yaml$",
      "argocd-apps/00-disabled/[^/]+\\.yaml$",
      "manifests/argocd/argocd.yaml$",
      "argocd-apps/media-tools/intel-device-plugins.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "manifests/[^/]+\\.yaml$",
      "manifests/media-tools/lidarr/values.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "deploy",
      "cronjob",
      "tunnel"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "argocd",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "matchManagers": [
        "argocd",
        "kubernetes"
      ],
      "matchPackageNames": [
        "cilium",
        "**/gateway-api.git",
        "longhorn",
        "**/mariadb-galera"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/home-assistant/home-assistant"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "docker.io/linuxserver/lidarr"
      ],
      "allowedVersions": "<=7.9"
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "docker.io/linuxserver/overseerr",
        "docker.io/linuxserver/transmission"
      ],
      "allowedVersions": "<=9.9"
    }
  ]
}
