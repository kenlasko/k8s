{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "argocd",
    "kubernetes"
  ],
  "argocd": {
    "fileMatch": [
      "argocd-apps/.+\\.yaml$",
      "argocd-apps/media-tools/[^/]+\\.yaml$",
      "manifests/argocd/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "deploy",
      "cronjob",
      "tunnel"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "argocd",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "matchManagers": [
        "argocd",
        "kubernetes"
      ],
      "matchPackageNames": [
        "cilium",
        "**/gateway-api.git",
        "longhorn",
        "**/mariadb-galera"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/home-assistant/home-assistant"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "docker.io/linuxserver/calibre-web",
        "docker.io/linuxserver/lidarr",
        "docker.io/linuxserver/overseerr",
        "docker.io/linuxserver/transmission"
      ],
      "matchCurrentAge": "< 1 year"
    }
  ]
}
