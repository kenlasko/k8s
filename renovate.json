{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "fileMatch": [
      "argocd-apps/.+\\.yaml$",
      "media-tools/[^/].+\\.yaml$",
      "argocd/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["deploy","cronjob","tunnel"]
  },
  "packageRules": [
    {
      "managers": ["argocd","kubernetes"],
      "matchPackageNames": [
        "**/!(lidarr)",
        "**/!(pgadmin4)",
        "**/!(cloudnative-pg)"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "managers": ["kubernetes"],
      "packageNames": ["docker.io/linuxserver/lidarr"],
      "allowedVersions": "<=7.9"
    },
    {
      "managers": ["kubernetes"],
      "packageNames": ["docker.io/linuxserver/overseerr"],
      "allowedVersions": "<=9.9"
    },
    {
      "managers": ["kubernetes"],
      "packageNames": ["docker.io/linuxserver/transmission"],
      "allowedVersions": "<=9.9"
    }
  ]
}