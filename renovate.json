{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "pre-commit": {
    "enabled": true
  },
  "enabledManagers": [
    "argocd",
    "helm-values",
    "kubernetes",
    "kustomize",
    "pre-commit"
  ],
  "argocd": {
    "fileMatch": [
      "argocd-apps/.*\\.yaml$",
      "manifests/argocd/argocd.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "^manifests/.*(values|cluster).*\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "deploy",
      "cluster",
      "cronjob",
      "tunnel"
    ],
    "ignorePaths": [
      "**/*-patch.yaml"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "deploy",
      "cronjob",
      "tunnel"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "argocd",
        "helm-values",
        "kubernetes",
        "kustomize"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "matchManagers": [
        "argocd",
        "helm-values",
        "kubernetes",
        "kustomize"
      ],
      "matchPackageNames": [
        "cilium",
        "**/gateway-api.git",
        "**immich-app/immich-**",
        "longhorn",
        "**/mariadb-galera"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchPackageNames": [
        "docker.io/freikin/dawarich",
        "ghcr.io/home-operations/home-assistant",
        "ghcr.io/immich-app/immich-server",
        "ghcr.io/immich-app/immich-machine-learning"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/calibrain/calibre-web-automated-book-downloader"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "matchManagers": [
        "helm-values",
        "kubernetes"
      ],
      "matchPackageNames": [
        "docker.io/linuxserver/overseerr",
        "docker.io/linuxserver/transmission"
      ],
      "allowedVersions": "<=9.9"
    }
  ]
}
