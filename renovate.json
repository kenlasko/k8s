{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "argocd",
    "custom.regex",
    "helm-values",
    "kubernetes"
  ],
  "argocd": {
    "fileMatch": [
      "argocd-apps/[^/]+/[^/]+\\.yaml$",
      "manifests/argocd/argocd.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "manifests/[^/]+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "deploy",
      "cronjob",
      "tunnel"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "argocd",
        "helm-values",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "matchManagers": [
        "argocd",
        "custom.regex",
        "kubernetes"
      ],
      "matchPackageNames": [
        "cilium",
        "**/gateway-api.git",
        "**/immich",
        "longhorn",
        "**/mariadb-galera"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchPackageNames": [
        "ghcr.io/home-operations/home-assistant"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/calibrain/calibre-web-automated-book-downloader"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    },
    {
      "matchManagers": [
        "helm-values",
        "kubernetes"
      ],
      "matchPackageNames": [
        "docker.io/linuxserver/overseerr",
        "docker.io/linuxserver/transmission"
      ],
      "allowedVersions": "<=9.9"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["manifests\/media-apps\/immich\/values.yaml$"],
      "matchStrings": [
        "tag:\\s*(?<currentValue>.*?)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "immich-app/immich"
    }
  ]
}
