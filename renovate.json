{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": ["deploy","cronjob","tunnel"]
  },
  "argocd": {
    "fileMatch": ["argocd-apps/.+\\.yaml$","media-tools/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "managers": ["kubernetes"],
      "packageNames": ["docker.io/linuxserver/lidarr"],
      "allowedVersions": "<=7.9"
    },
    {
      "managers": ["kubernetes"],
      "packageNames": ["docker.io/linuxserver/overseerr"],
      "allowedVersions": "<=9.9"
    },
    {
      "managers": ["kubernetes"],
      "packageNames": ["docker.io/linuxserver/transmission"],
      "allowedVersions": "<=9.9"
    }
  ]
}